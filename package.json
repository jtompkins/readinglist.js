{
  "name": "readinglist-js",
  "version": "2.0.0-alpha.1",
  "description": "A static site generator for your reading list",
  "main": "src/index.js",
  "author": "Joshua Tompkins <josh@joshtompkins.com>",
  "license": "MIT",
  "devDependencies": {
    "cheerio": "^1.0.0-rc.12",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "node-sass": "^8.0.0",
    "prettier": "2.8.2"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "commander": "^9.5.0",
    "figlet": "^1.5.2",
    "joi": "^17.7.0",
    "pug": "^3.0.2"
  },
  "type": "module",
  "scripts": {
    "format": "prettier --write \"src/**/*.js\"",
    "compileSass": "node-sass \"./themes\" --output \"./themes\" --output-style compressed",
    "test": "node --experimental-vm-modules $(yarn bin jest)",
    "verify": "yarn format && yarn compileSass && yarn test",
    "prepare": "husky install",
    "sample": "node src/index.js -b ./test/sample-books-file.json -o ./test"
  },
  "preferGlobal": true,
  "bin": {
    "reading-list": "src/index.js"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
