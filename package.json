{
  "name": "readinglist.js",
  "version": "1.0.0",
  "description": "A static site generator for your reading list",
  "main": "src/index.js",
  "author": "Joshua Tompkins <josh@joshtompkins.com>",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "node-sass": "^8.0.0",
    "prettier": "^2.8.2"
  },
  "dependencies": {
    "joi": "^17.7.0",
    "pug": "^3.0.2",
    "toml": "^3.0.0"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.js\"",
    "compileSass": "node-sass \"./themes\" --output \"./themes\" --output-style compressed",
    "test": "jest",
    "testWithDebug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "verify": "yarn format && yarn compileSass && yarn test"
  },
  "preferGlobal": true,
  "bin": {
    "readinglist": "src/index.js"
  }
}
